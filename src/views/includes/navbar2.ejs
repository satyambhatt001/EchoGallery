<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link rel="stylesheet" href="/css/navbar2.style.css">

    <!-- BOOTSTRAP CDN -->
    <link 
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" 
        rel="stylesheet" 
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" 
        crossorigin="anonymous"
    />

    <!-- GOOGLE FONT CDN -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=login" />

    <!-- FONT AWESOME CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    
</head>
<body>

    <!-- NAV BAR START -->
    <nav class="navbar navbar-expand-md bg-body-tertiary border-bottom sticky-top" style="background-color: #e3f2fd !important;">
        <div class="container-fluid">
            <!-- HOME ICON  -->
            <a class="navbar-brand" href="/">
                <img src="/css/apple.png" alt="Icon" class="icon-circle">
            </a>
            <button 
                class="navbar-toggler" 
                type="button" 
                data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" 
                aria-label="Toggle navigation"
            >
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <!-- UPLOAD IMAGE BUTTON -->
                <form action="/image" method="GET" class="d-flex align-items-center">
                    <button type="submit" class="btn btn-outline-dark mx-2 rounded-pill d-flex align-items-center" style="padding: 10px 18px; font-size: 16px;">
                        <i class="fa-regular fa-image fa-lg" style="margin-right: 8px;"></i>
                        Upload an Image
                    </button>
                </form>

                <!-- HOME SIGN UP SIGN IN OPTIONS -->
                <div class="navbar-nav ms-auto">

                    <% if( !currUser ) { %>
                        <a class="btn btn-outline-dark mx-2 rounded-pill d-flex align-items-center" aria-current="page" href="/">
                            <i class="fa-solid fa-house fa-lg"></i>&nbsp;Home
                        </a>

                        <a class="btn btn-outline-dark mx-2 rounded-pill d-flex align-items-center" href="/register">
                            <i class="fa-solid fa-user-plus fa-lg"></i>&nbsp;Sign Up
                        </a>

                        <a class="btn btn-outline-dark mx-2 rounded-pill d-flex align-items-center" href="/login">
                            <i class="fa-solid fa-right-from-bracket fa-lg"></i>&nbsp;Sign In
                        </a>
                    <% } else { %>
                        <!-- <a class="btn btn-outline-dark mx-2 rounded-pill d-flex align-items-center" href="/user/logout">
                            <span class="material-symbols-outlined">login</span>&nbsp;Sign Out
                        </a> -->
                        <a class="btn btn-outline-dark mx-2 rounded-pill d-flex align-items-center" href="/currentUser">
                            <i class="fa-solid fa-circle-user fa-lg"></i>&nbsp; <%= currUser.username %>
                        </a>
                        <form action="/user/logout" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-outline-dark mx-2 rounded-pill d-flex align-items-center">
                                <i class="fa-solid fa-right-from-bracket fa-rotate-180 fa-lg"></i>&nbsp;Sign Out
                            </button>
                        </form>
                    <% } %>
                </div>
            </div>
        </div>
    </nav>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
